@model IEnumerable<MVCtest.Models.WorkModels.WorkNC_UserPermission>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.Action("Search","WorkZoneUser")
</div>

<div>
    <input type="checkbox" value="Online" id="Online"> Online
</div>
<table class="table">
    <tr class="td-border" style="background-color: green;">
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WebPermission)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppPermission)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="td-border">
        <td class="td-border">
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td class="td-border">
            @Html.DisplayFor(modelItem => item.CompanyId)
        </td>
        <td class="td-border">
            @Html.Action("ViewPermission", "WorkZoneUser")
        </td>
        <td class="td-border">
            @Html.CheckBoxFor(modelItem => item.AppPermission)
        </td>
        <td class="td-border">
            @Html.ActionLink("Edit", "Edit", new { id=item.Username }) |
            @Html.ActionLink("Details", "Details", new { id=item.Username }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Username })
        </td>
    </tr>
}

</table>
