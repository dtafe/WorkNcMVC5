@model IEnumerable<WorkNCInfoService.Mvc5.Models.WorkModels.WorkNC_Machine>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.Action("SearchMachine", "Machine");
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr class="td-border" style="background-color: green; color: white;">
        <th>
            @Html.DisplayNameFor(model => model.CompanyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FactoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="td-border">
            @Html.DisplayFor(modelItem => item.CompanyId)
        </td>
        <td class="td-border">
            @Html.DisplayFor(modelItem => item.FactoryId)
        </td>
        <td class="td-border">
            @Html.DisplayFor(modelItem => item.No)
        </td>
        <td class="td-border">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="td-border">
            @Html.ActionLink("Edit", "Edit", new { id=item.MachineId }) 
            @Html.ActionLink("Details", "Details", new { id=item.MachineId }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.MachineId })
        </td>
    </tr>
}

</table>
