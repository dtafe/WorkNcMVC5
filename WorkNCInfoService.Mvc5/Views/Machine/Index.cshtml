@using WorkNCInfoService.Mvc5.Models.WorkModels;
@model PagedList.IPagedList<WorkNC_Machine>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.Action("SearchMachine", "Machine");
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr class="td-border" style="background-color: green; color: white;">
        <th>
            <div class="colorSort">@Html.ActionLink("Machine No", "Index", new { sortOrder = ViewBag.NoSort, currentFilter = ViewBag.CurrentFilter })<span class="caret"></span></div>
        </th>
        <th>
            <div class="colorSort">@Html.ActionLink("Machine Name", "Index", new { sortOrder = ViewBag.NameSort, currentFilter = ViewBag.CurrentFilter })<span class="caret"></span></div>
        </th>
        <th>Status</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="td-border">
            @Html.DisplayFor(modelItem => item.No)
        </td>
        <td class="td-border">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="td-border">
            @if(item.isDeleted.Equals(true))
            {
                <p>Deleted</p>
            }
            else
            {
                <p>Normal</p>
            }
        </td>
        <td class="td-border">
            @Html.ActionLink("Edit", "Edit", new { id=item.MachineId }) 
            @Html.ActionLink("Details", "Details", new { id=item.MachineId }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.MachineId })
        </td>
    </tr>
}

</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

