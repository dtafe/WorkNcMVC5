        function SetConfirmEmail(){
            var users = {
                UserName: $('.userName').value,
                WebPermission: $('#EmailConfirm').val()
            }
            $.ajax({
                url: '/UserPermission/EmailConfirm',
                type: 'GET',
                contentType: "application/json; charset=utf-8",
                data: users,
                success: function(result) {
