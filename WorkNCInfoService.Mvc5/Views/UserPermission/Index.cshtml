                }
            });
        }

        //Set WebPermission
        var textbox = $(this).closest('tr').find('td:eq(1) input');
        function SetWebPermission() {
        
            var users = {
                UserName: $(".userName").val(),
                WebPermission: $(this).val()
            }
            $.ajax({
                type: 'GET',
                url: '/UserPermission/SetWebPermission',
                contentType: "application/json; charset=utf-8",

                success: function (data) {
                    $('form').submit();
                },
                data: users
            });
        }

        //Set AppPermission
        function SetAppPermission() {

            var users = {
