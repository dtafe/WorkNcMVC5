    <script language="javascript">
        function LoadDeleted() {

                $.ajax({
                    type: 'POST',
                    url: '/Factory/Index',
                    data: {},
                    datatype: 'json',
                    success: function (data) {
                        $.each(data, function (index, value) {

                        });
                    }
                });
        }
        $('#chkFactory').change(function () {
            LoadDeleted();
        });
    </script>    
}