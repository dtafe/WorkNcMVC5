@section scripts{
    <script language="javascript">

        $('#chkFactory').change(function () {
            if ($(this).is(":checked")) {
                $.ajax({
                    type: 'GET',
                    url: '/Factory/Index',
                    dataType: 'Json',
                    data: { isDeleted: $('chkFactory').val() },
                    success: function (data) {
                        $('#chkFactory').prop('checked', true);
                    }
                });
            }

            else {
                $.ajax({
                    type: 'GET',
                    url: '/Factory/Index',
                    dataType: 'Json',
                    data: { isDeleted: $('chkFactory').val() },
                    success: function (data) {
                        $('#chkFactory').prop('checked', false);
                    }
                });
            }
        });
    </script>
}